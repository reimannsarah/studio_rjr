    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "../dist/index.html",
        "headers": 
          {
            "key": "VITE_AZURE_STORAGE_ACCOUNT_NAME",
            "value": "studiorjr"
          },
        "destination": "/index.html"
      }
    ]
  }
}